@model IEnumerable<ClientCRUD.Models.Client>

<h1>Liste des Clients</h1>

<p><a href="@Url.Action("Create")" class="btn btn-primary">Ajouter un client</a></p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var client in Model)
    {
        <tr>
            <td>@client.Nom</td>
            <td>@client.Prenom</td>
            <td>@client.Email</td>
            <td>@client.Telephone</td>
            <td>
                <a href="@Url.Action("Details", new { id = client.Id })" class="btn btn-info btn-sm">Détails</a>
                <a href="@Url.Action("Edit", new { id = client.Id })" class="btn btn-warning btn-sm">Modifier</a>
                <a href="@Url.Action("Delete", new { id = client.Id })" class="btn btn-danger btn-sm">Supprimer</a>
            </td>
        </tr>
    }
    </tbody>
</table>
